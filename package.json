{
    "name": "universal-demo",
    "version": "0.0.0",
    "license": "MIT",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "ssr": "npm run build:universal && npm run server",
        "ssr:debug": "ng build --dev --aot=true --output-hashing=all --named-chunks=false --build-optimizer=true  && ng build --dev --aot=true --output-hashing=all --named-chunks=false --build-optimizer=true --app 1 && webpack && node server.js",
        "ssr:cw": "ng build --dev --aot=true --output-hashing=all --named-chunks=false --build-optimizer=true --watch",
        "ssr:sw": "ng build --dev --aot=true --output-hashing=all --named-chunks=false --build-optimizer=true --app 1 --watch",
        "ssr:server": "webpack && node server.js",
        "build": "ng build",
        "build:prod": "ng build --prod",
        "build:universal": "ng build --prod && ng build --prod --app 1 && webpack --progress --colors",
        "server": "node server.js",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "universal": "ng build --prod && ng build --prod --app 1 && ts-node server",
        "build:prerender": "npm run build:universal && npm run generate:prerender",
        "generate:prerender": "node prerender.js"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "5.0.3",
        "@angular/common": "5.0.3",
        "@angular/compiler": "5.0.3",
        "@angular/core": "5.0.3",
        "@angular/forms": "5.0.3",
        "@angular/http": "5.0.3",
        "@angular/platform-browser": "5.0.3",
        "@angular/platform-browser-dynamic": "5.0.3",
        "@angular/router": "5.0.3",
        "@ngtools/webpack": "1.8.4",
        "@nguniversal/common": "5.0.0-beta.5",
        "@nguniversal/express-engine": "5.0.0-beta.5",
        "@nguniversal/module-map-ngfactory-loader": "5.0.0-beta.5",
        "@types/node": "8.0.53",
        "cookie-parser": "1.4.3",
        "core-js": "2.5.1",
        "ngx-cookie-service": "1.0.9",
        "preboot": "5.1.7",
        "rxjs": "5.5.2",
        "uglify-es": "3.1.10",
        "zone.js": "0.8.18"
    },
    "devDependencies": {
        "@angular/cli": "1.5.4",
        "@angular/compiler-cli": "5.0.3",
        "@angular/language-service": "5.0.3",
        "@angular/platform-server": "5.0.3",
        "@types/jasmine": "2.8.2",
        "@types/jasminewd2": "2.0.3",
        "codelyzer": "4.0.1",
        "concurrently": "3.5.1",
        "jasmine-core": "2.8.0",
        "jasmine-spec-reporter": "4.2.1",
        "karma": "1.7.1",
        "karma-chrome-launcher": "2.2.0",
        "karma-cli": "1.0.1",
        "karma-coverage-istanbul-reporter": "1.3.0",
        "karma-jasmine": "1.1.0",
        "karma-jasmine-html-reporter": "0.2.2",
        "protractor": "5.2.0",
        "tslint": "5.8.0",
        "typescript": "2.4.2"
    }
}
